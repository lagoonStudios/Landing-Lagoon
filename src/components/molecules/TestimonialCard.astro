---
import Typography from '@atoms/Typography.astro'
import type { Testimony } from '../../types/types.ts'
interface Props extends Testimony {}

const { logo, testimonyTitle, testimony, companyName, name, rate, date } = Astro.props
---

<li class="flex w-full max-w-[500px] flex-col items-center justify-center rounded-t-[20px]">
  {!!logo && <div class="w-full rounded-t-[20px] bg-blue p-5 text-center text-white">{logo}</div>}

  <div class="flex flex-col gap-5 bg-white p-4">
    <div class="flex flex-col items-end">
      {
        rate && (
          <Typography as="label" variant="small" color="black">
            {rate}
          </Typography>
        )
      }
      {
        date && (
          <Typography as="label" variant="small" color="black">
            {date}
          </Typography>
        )
      }
    </div>
    <Typography as="h4" variant="body" color="black" class="font-semibold">
      {testimonyTitle}
    </Typography>

    <Typography as="p" variant="medium" class="bg-red" color="black">
      {testimony}
    </Typography>

    {
      (companyName || name) && (
        <div class="flex flex-col items-end">
          {companyName && (
            <Typography as="label" variant="medium" color="black">
              {companyName}
            </Typography>
          )}

          {name && (
            <Typography as="label" variant="medium" color="black" class="text-light-grey">
              {name}
            </Typography>
          )}
        </div>
      )
    }
  </div>
</li>

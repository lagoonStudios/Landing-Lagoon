---
import Typography from './Typography.astro'

interface Props {
  label: string
}

const { label } = Astro.props
---

<Typography as="label" variant="medium" color="white" class="flex w-full flex-col gap-1 font-extralight">
  {label}
  <input class="w-full rounded-full text-black px-5 py-2" />
</Typography>

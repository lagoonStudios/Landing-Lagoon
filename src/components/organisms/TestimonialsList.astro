---
import TestimonialCard from '@molecules/TestimonialCard.astro'
import type { Testimony } from 'src/types/types'

const TESTIMONIALS: Testimony[] = [
  {
    logo: 'VERITI LOGO',
    testimonyTitle: 'A great team that I recommend to reach the goals in the estimated time.',
    testimony:
      'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed laoreet dui id orci commodo lacinia. Aliquam erat volutpat. Nulla in turpis dolor. Integer congue elit nec ipsum fringilla, sed ornare diam euismod.',
    companyName: 'Veriti  app Team',
    name: 'Martin Chapman',
    rate: 5,
    date: 'June 2023',
  },
]
---

<ul class="p-3 flex justify-center items-center">
  {
    TESTIMONIALS.map(({ logo, testimonyTitle, testimony, companyName, name, rate, date }) => (
      <TestimonialCard
        logo={logo}
        testimonyTitle={testimonyTitle}
        testimony={testimony}
        companyName={companyName}
        name={name}
        rate={rate}
        date={date}
      />
    ))
  }
</ul>
